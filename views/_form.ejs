<div class="form-group row">
  <label class="col-form-label col-sm-2" for="id">ID</label>
  <div class="col-sm-3">
    <input type="number" class="form-control" name="id" min="1" <%= creation ? 'required' : null %>/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="firstname">First name</label>
  <div class="col-sm-3">
    <input class="form-control" name="firstname" <%= creation ? 'required' : null %> />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="lastname">Last name</label>
  <div class="col-sm-3">
    <input class="form-control" name="lastname" <%= creation ? 'required' : null %>/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="state">State</label>
  <div class="col-sm-3">
    <input class="form-control" name="state" maxlength="2" pattern="[A-Za-z]{2}"/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="sales">Sales YTD</label>
  <div class="col-sm-3">
    <input type="number" class="form-control" name="sales"/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="previous">Previous years Sales</label>
  <div class="col-sm-3">
    <input type="number" class="form-control" name="previous"/>
  </div>
</div>